@model IEnumerable<kursova9.Models.Student>
@{
    Layout = "_Layout";
}


<table class="table table-bordered table-dark">
    <thead style="color:white" class="border-primary">
        <tr class="border-primary">
            <td scope="col">№</td>
            <td scope="col">Имя</td>
            <td scope="col">Фамилия</td>
            <td scope="col">Отчество</td>
            <td scope="col">Текущий статус</td>
            <td scope="col">Курс</td>
            <td scope="col">Дата зачисления</td>
            <td scope="col"></td>
        </tr>
    </thead>
    <tbody class="border-primary">
        @{
            int i = 1;
        }
        @foreach (var student in Model)
        {
        <tr>
            <td scope="row">@i</td>
            <td>@student.Name</td>
            <td>@student.Surname</td>
            <td>@student.Patronymic</td>
            <td>@student.State</td>
            <td>@student.Course</td>
            <td>@student.Date.ToLongDateString()</td>
            <td><a style="width:150px" class="btn btn-light" href="~/Home/Editing/@student.id">Редактировать</a></td>
        </tr>
        {
        i = i + 1;
        }
        }
    </tbody>
</table>
